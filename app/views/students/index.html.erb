<h2>Students</h2>

<ul>
    <% @students.each do |student| %>
        <li><%= render partial: 'student', locals: {student: student} %></li>
    <% end %>
</ul>

<h2>Search for a Student</h2>

<%= form_tag students_path, method: :get do %>
    Student <%= text_field_tag :student, params[:student] %>
    <%= submit_tag 'Search', name: nil %> 
<% end %> 
